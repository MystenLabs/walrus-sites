{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
    ],
    "baseUrl": "./",
      "paths": {
        "@lib/*": ["lib/*"]
    },
  },
  "baseUrl": "./",
