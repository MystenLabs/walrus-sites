{
  "compilerOptions": {
  	"allowSyntheticDefaultImports": true,
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["lib/src/*"],
      "@static/*": ["static/*"]
    }
  },
  "rootDir": "src",
  "outDir": "dist",
  "skipLibCheck": true,
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
